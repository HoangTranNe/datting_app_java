<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginPhoneNumberActivity">

    <LinearLayout android:id="@+id/linearNumber"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <ImageView android:id="@+id/imageArrowleft"
            android:layout_gravity="start"
            android:layout_height="20dp"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="79dp"
            android:layout_width="9dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrowleft_bluegray_405"
            tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft_bluegray_405"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnmynumberis"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="23dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="43dp"
            android:layout_width="match_parent" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtMynumberis"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:fontFamily="@font/inter"
                android:textSize="39sp"
                android:text="My number is"/>
            <LinearLayout android:id="@+id/linearRowgroupfourteen"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent" android:orientation="horizontal">
                <Spinner android:id="@+id/spinnerGroupFourteen"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:layout_width="10dp" tools:listitem="@layout/spinner_item"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearColumn000000000"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_weight="0.67"
                    android:layout_width="0dp" android:orientation="vertical">
                    <EditText android:ellipsize="end"
                        android:id="@+id/inputPhone"
                        android:inputType="numberSigned"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_width="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <FrameLayout android:id="@+id/frameStackdescription"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_41pxv"
                android:layout_width="300dp">
                <TextView android:gravity="top|start"
                    android:id="@+id/txtDescription"
                    android:layout_gravity="start"
                    android:layout_height="80dp"
                    android:layout_width="match_parent"
                    android:text="@string/msg_we_will_send_a"/>
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnContinue"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="80dp"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="30dp"
                android:paddingStart="30dp"
                android:paddingTop="@dimen/_14pxv"
                android:singleLine="true"
                android:text="@string/lbl_continue"
                android:background="@drawable/frame_button"
                android:textAllCaps="false"
                tools:text="@string/lbl_continue"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>